@import "tailwindcss";
/* @import "tw-animate-css"; moved to layout.js */

@custom-variant dark (&:is(.dark *));

@theme inline {
  --color-system-purple: #7c3aed;
  --color-system-purple-dark: #5b21b6;
  --color-system-bg: #ffffff;
  --color-system-card: #ffffff;

  --font-sans: "Plus Jakarta Sans", "Space Grotesk", ui-sans-serif, system-ui, sans-serif;
  --font-mono: var(--font-geist-mono);

  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-primary: var(--primary);
  --color-primary-foreground: var(--primary-foreground);
  --color-secondary: var(--secondary);
  --color-secondary-foreground: var(--secondary-foreground);
  --color-accent: var(--accent);
  --color-accent-foreground: var(--accent-foreground);
}

:root {
  --background: 0 0% 100%;
  --foreground: 224 71.4% 4.1%;
  --primary: 262.1 83.3% 57.8%;
  --primary-foreground: 210 20% 98%;
  --secondary: 262.1 83.3% 95%;
}

@layer base {
  body {
    background-color: #f8fafc;
    color: #0f172a;
    font-family: var(--font-sans);
    background-image:
      radial-gradient(at 0% 0%, rgba(124, 58, 237, 0.03) 0px, transparent 50%),
      radial-gradient(at 100% 100%, rgba(124, 58, 237, 0.03) 0px, transparent 50%);
    background-attachment: fixed;
    cursor: default;
    -webkit-font-smoothing: antialiased;
  }

  ::selection {
    background: #7c3aed;
    color: #fff;
  }
}

.system-window {
  background: #ffffff;
  border: 1px solid rgba(124, 58, 237, 0.1);
  box-shadow:
    0 10px 15px -3px rgba(0, 0, 0, 0.05),
    0 4px 6px -2px rgba(0, 0, 0, 0.02),
    0 0 0 1px rgba(124, 58, 237, 0.05);
  position: relative;
  border-radius: 12px;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.system-window:hover {
  transform: translateY(-2px);
  box-shadow:
    0 20px 25px -5px rgba(124, 58, 237, 0.1),
    0 10px 10px -5px rgba(124, 58, 237, 0.04);
  border-color: rgba(124, 58, 237, 0.2);
}

.system-window-header {
  background: rgba(124, 58, 237, 0.03);
  border-bottom: 1px solid rgba(124, 58, 237, 0.08);
  padding: 0.75rem 1.25rem;
  font-size: 0.7rem;
  font-weight: 800;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  color: #7c3aed;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 12px 12px 0 0;
}

.system-text-glow {
  text-shadow: 0 0 20px rgba(124, 58, 237, 0.15);
}

.stat-bar {
  height: 8px;
  background: #f1f5f9;
  border-radius: 4px;
  position: relative;
  overflow: hidden;
}

.stat-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #7c3aed, #a855f7);
  border-radius: 4px;
  position: relative;
}

.perspective-grid {
  position: fixed;
  inset: 0;
  background-image:
    linear-gradient(rgba(124, 58, 237, 0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(124, 58, 237, 0.03) 1px, transparent 1px);
  background-size: 60px 60px;
  mask-image: radial-gradient(circle, black, transparent 80%);
  z-index: -1;
  pointer-events: none;
}

.btn-system {
  @apply relative overflow-hidden px-8 py-3 bg-white border border-slate-200 text-slate-900 font-bold text-xs tracking-widest uppercase transition-all duration-300 rounded-lg shadow-sm;
}

.btn-system:hover {
  @apply border-system-purple text-system-purple shadow-lg shadow-system-purple/5 -translate-y-0.5;
}

.btn-primary-system {
  @apply relative overflow-hidden px-8 py-3 bg-system-purple text-white font-bold text-xs tracking-widest uppercase transition-all duration-300 rounded-lg shadow-md hover:shadow-xl hover:shadow-system-purple/20 hover:-translate-y-0.5;
}

.hud-corner {
  @apply absolute w-3 h-3 border-system-purple/20;
}

.hud-corner-tl {
  @apply top-2 left-2 border-t-2 border-l-2 rounded-tl-sm;
}

.hud-corner-tr {
  @apply top-2 right-2 border-t-2 border-r-2 rounded-tr-sm;
}

.hud-corner-bl {
  @apply bottom-2 left-2 border-b-2 border-l-2 rounded-bl-sm;
}

.hud-corner-br {
  @apply bottom-2 right-2 border-b-2 border-r-2 rounded-br-sm;
}

.shadow-premium {
  box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.1);
}

@keyframes float {
  0% {
    transform: translateY(0px);
  }

  50% {
    transform: translateY(-10px);
  }

  100% {
    transform: translateY(0px);
  }
}

.animate-float {
  animation: float 6s ease-in-out infinite;
}

@keyframes blink {

  0%,
  100% {
    opacity: 1;
  }

  50% {
    opacity: 0;
  }
}

.animate-blink {
  animation: blink 1s step-end infinite;
}